    <item android:state_pressed="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/white" />
            <stroke android:color="@color/light_orange"
                android:width="2dp"
                />
        </shape>
    </item>
</selector>

