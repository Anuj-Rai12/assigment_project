<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context="com.example.mytestingproject.fragment.QuestionThreeFragment">


    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="welcome"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/wel_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to continue"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/welcome_txt"
        app:layout_constraintRight_toRightOf="@id/welcome_txt"
        app:layout_constraintTop_toBottomOf="@id/welcome_txt" />


    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wel_desc" />


    <ImageButton
        android:id="@+id/person_ic"
        android:layout_width="55dp"
        android:layout_height="68dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#676c6d"
        android:src="@drawable/round_person_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_name_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="30dp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusTopStart="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/black"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="@id/person_ic"
        app:layout_constraintLeft_toRightOf="@id/person_ic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/person_ic">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:hint="User Name"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageButton
        android:id="@+id/lock_ic"
        android:layout_width="55dp"
        android:layout_height="68dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#676c6d"
        android:src="@drawable/round_lock_24"
        app:layout_constraintLeft_toLeftOf="@id/person_ic"
        app:layout_constraintTop_toBottomOf="@id/person_ic" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_pass_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="-4dp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusTopStart="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/black"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="@id/lock_ic"
        app:layout_constraintLeft_toRightOf="@id/lock_ic"
        app:layout_constraintRight_toRightOf="@id/user_name_layout"
        app:layout_constraintTop_toTopOf="@id/lock_ic">

        <EditText
            android:id="@+id/user_pass_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:hint="User Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/remember_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:buttonTint="#676c6d"
        android:text="Remember Me"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/forget_pass_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@id/lock_ic"
        app:layout_constraintTop_toBottomOf="@id/lock_ic" />

    <TextView
        android:id="@+id/forget_pass_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="end"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@id/remember_btn"
        app:layout_constraintEnd_toEndOf="@id/user_pass_layout"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintVertical_bias=".6"
        app:layout_constraintStart_toEndOf="@+id/remember_btn"
        app:layout_constraintTop_toBottomOf="@id/user_pass_layout" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#676c6d"
        android:paddingStart="50dp"
        android:paddingTop="12dp"
        android:paddingEnd="50dp"
        android:paddingBottom="12dp"
        android:text="Login"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/remember_btn"
        app:layout_constraintRight_toRightOf="@id/forget_pass_txt"
        app:layout_constraintTop_toBottomOf="@id/remember_btn"
        app:layout_constraintVertical_bias="0"
        app:strokeColor="#676c6d" />

</androidx.constraintlayout.widget.ConstraintLayout>