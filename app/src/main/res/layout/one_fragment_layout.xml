<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mytestingproject.fragment.OneFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/src_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/first_head_color">


            <TextView
                android:id="@+id/first_heading_txt"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="22dp"
                android:textStyle="bold"
                android:fontFamily="@font/gilroy_medium"
                android:text="First time Ever"
                android:textAllCaps="true"
                android:textColor="@color/txt_color"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/sec_heading_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="Earn 2X More Returns on Your NRO/NRE Savings "
                android:textColor="@color/action_txt_color"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/company_one"
                app:layout_constraintTop_toBottomOf="@id/first_heading_txt" />


            <TextView
                android:id="@+id/third_heading_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/action_txt_color"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/tick_icon"
                app:layout_constraintLeft_toLeftOf="@id/sec_heading_txt"
                app:layout_constraintTop_toBottomOf="@id/sec_heading_txt"
                tools:text="item is good 1" />


            <TextView
                android:id="@+id/fourth_heading_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/action_txt_color"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/tick_icon"
                app:layout_constraintLeft_toLeftOf="@id/third_heading_txt"
                app:layout_constraintTop_toBottomOf="@id/third_heading_txt"
                tools:text="item is good 1" />


            <include
                android:id="@+id/company_one"
                layout="@layout/conpany_info_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/fourth_heading_txt" />


            <include
                android:id="@+id/company_two"
                layout="@layout/conpany_info_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/company_one" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>











</ScrollView>